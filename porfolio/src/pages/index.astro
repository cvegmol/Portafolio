---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import Github from "../components/icons/Github.astro";
import Mail from "../components/icons/Mail.astro";
import Card from "../components/Card.astro";
import SocialIcon from "../components/SocialIcon.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Brief from "../components/icons/Brief.astro";
import Work from "../components/icons/Work.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Porfolio de Carlos Vega Molina | Ingeniero en Sistemas de Información">
  <main class="px-4">
    <SectionContainer  class="py-44 pb-22">
		<img src="/public/images/foto.jpg" alt="Foto" class="rounded-full w-12 h-12 "/>
      <h1
        class="text-white text-2xl lg:text-5xl font-bold flex justify-center flex-row gap-x-4 pb-4">
        Soy, Carlos Vega Molina
        <div class="flex justify-center items-center">
          <a href="www.linkedin.com/in/carlos-vega-molina-6a0a5b261" target="_blank" rel="noopener" class="flex justify-center items-center">
            <Badge>Disponible para trabajar</Badge>
          </a>
        </div>
      </h1>
      <h2 class="text-xl opacity-55 text-wrap max-w-[500px]">
        <span >0 años de experiencia.</span>
		<span class="opacity-80 text-yellow-200/95" >Ingeniero Informático en Sistema de Información.</span>
		<span class="opacity-90"> De Sevilla, España.</span>	
      </h2>

	  <nav class="flex gap-4 mt-8  flex-grap">
			<SocialIcon href="www.linkedin.com/in/carlos-vega-molina-6a0a5b261">
				<Linkedin class="w-6 h-6"/>
				Linkedin
			</SocialIcon>
			<SocialIcon href="https://github.com/cvegmol">
				<Github class="w-6 h-6"/>
				Github
			</SocialIcon>
			<SocialIcon href="mailto:cvegamol@gmail.com">
				<Mail class="w-6 h-6"/>
				carlosvemolina@gmail.com
			</SocialIcon>
			
		
	  </nav>

    </SectionContainer>
	
	<SectionContainer id="experiencia">
		<h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
			<Brief class="size-8"/>
			Experiencia Laboral
		</h2>
		<Experience />
	</SectionContainer>


	<SectionContainer id="proyectos">
		<h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
			<Work class="size-8"/>
			Proyectos
		</h2>
		<Projects />
	</SectionContainer>
  </main>
</Layout>

